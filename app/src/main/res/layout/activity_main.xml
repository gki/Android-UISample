<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Error Alert"
        android:id="@+id/button"
        android:onClick="onClickShowErrorAlert" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Confirmation Alert"
        android:id="@+id/button2"
        android:onClick="onClickShowConfirmationAlert" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Title on Alert"
        android:id="@+id/switch1"
        android:enabled="true"
        android:checked="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Loading Indicator 5sec. (Full Screen)"
        android:id="@+id/button3"
        android:layout_marginTop="20dp"
        android:onClick="onClickIndicatorFullScreen" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Toast"
        android:id="@+id/button4"
        android:layout_marginTop="20dp"
        android:onClick="onClickShowToast" />

</LinearLayout>
